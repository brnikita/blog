<div class="form-control-calendar clearfix">
    <div class="form-control-date">
        <select class="form-control" id="{{dateField}}" name="{{dateField}}">
            {{#each datesList}}
                <option {{#if selected}}selected="selected" {{/if}}value="{{value}}">{{title}}</option>
            {{/each}}
        </select>
    </div>
    <div class="form-control-month">
        <select class="form-control" id="{{monthField}}" name="{{monthField}}">
            {{#each monthsList}}
                <option {{#if selected}}selected="selected" {{/if}}value="{{value}}">{{title}}</option>
            {{/each}}
        </select>
    </div>
    <div class="form-control-year">
        <select class="form-control" id="{{fullYearField}}" name="{{fullYearField}}">
            {{#each fullYearsList}}
                <option {{#if selected}}selected="selected" {{/if}}value="{{value}}">{{title}}</option>
            {{/each}}
        </select>
    </div>
</div>