<div class="container">
    <div class="row">
        <div class="col-md-7 col-md-offset-2">
            <form role="form">
                <div class="form-group">
                    <label for="full-name">{{i18n 'Full Name'}}</label>
                    <input type="text" class="form-control js-validate-input js-model-field" name="full-name"
                           id="email"
                           placeholder="{{i18n 'Full Name'}}">
                </div>
                <div class="form-group">
                    <label for="password">{{i18n 'Password'}}</label>
                    <input type="password" class="form-control js-validate-input js-model-field"
                           name="password"
                           id="password"
                           placeholder="{{i18n 'Password'}}">
                </div>
                <button type="submit" class="btn btn-warning js-sign-up">{{i18n 'Complete registration'}}</button>
            </form>
        </div>
    </div>
</div>