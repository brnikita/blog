{{#if posts}}
    <div class="posts">
        {{#each posts}}
            <div class="posts__item clearfix">
                <div class="js-meta-information"></div>
                <h1>
                    <a class="js-router-link" href="/{{../locale}}/posts/{{UTCYear}}/{{UTCMonth}}/{{UTCDate}}/{{titleUrl}}">{{title}}</a>
                </h1>

                <p>{{{description}}}</p>
                <a class="btn btn-success js-router-link" href="/{{../locale}}/posts/{{UTCYear}}/{{UTCMonth}}/{{UTCDate}}/{{titleUrl}}">{{i18n 'Read more...'}}</a>
            </div>
        {{/each}}
    </div>
{{else}}
    <div class="page-not-found font-color-green">
        <h1>{{i18n 'No posts'}}</h1>
    </div>
{{/if}}