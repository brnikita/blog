{{#if posts}}
    <div class="posts">
        {{#each posts}}
            <div class="posts__item clearfix">
                <div class="js-meta-information"></div>
                <h1>
                    <a class="js-router-link"
                       href="/{{../locale}}/posts/{{UTCYear}}/{{UTCMonth}}/{{UTCDate}}/{{titleUrl}}">{{title}}</a>
                </h1>

                <p>{{{description}}}</p>
                <a class="btn btn-success js-router-link"
                   href="/{{../locale}}/posts/{{UTCYear}}/{{UTCMonth}}/{{UTCDate}}/{{titleUrl}}">{{i18n 'Read more...'}}</a>
            </div>
        {{/each}}
    </div>
{{else}}
    <div class="box-message box-message-warning">
        <h3>
            <a class="js-router-link" href="/ru/add_post">
                {{{i18n 'Here could be your posts'}}}
            </a>
        </h3>
    </div>
{{/if}}