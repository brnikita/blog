<div class="posts__preview__toolbar">
    {{#if canEdit}}
        <a class="posts__preview__toolbar__edit js-router-link"
           href="/{{locale}}/posts/{{_id}}/edit">{{i18n 'Edit'}}</a>
    {{/if}}
    {{#if status}}
        <div class="posts__preview__toolbar__status label {{statusClass}}">{{status}}</div>
    {{/if}}
</div>