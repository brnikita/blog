<div class="container">
    <div class="row">
        <div class="col-md-7 col-md-offset-2">
            <div class="login-form font-color-yellow">
                <!-- Nav tabs -->
                <ul class="nav nav-tabs js-login-nav-tabs">
                    <li class="active"><a href="#login" data-toggle="login">{{i18n 'Login'}}</a></li>
                    <li><a href="#registration" data-toggle="registration">{{i18n 'Registration'}}</a></li>
                </ul>

                <!-- Tab panes -->
                <div class="tab-content">
                    <div class="tab-pane active" id="login">
                        <form role="form">
                            <div class="form-group">
                                <label for="exampleInputEmail1">{{i18n 'Email address'}}</label>
                                <input type="email" class="form-control" id="exampleInputEmail1"
                                       placeholder="{{i18n 'Enter email'}}">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">{{i18n 'Password'}}</label>
                                <input type="password" class="form-control" id="exampleInputPassword1"
                                       placeholder="{{i18n 'Password'}}">
                            </div>
                            <button type="submit" class="btn btn-primary">{{i18n 'Sign in'}}</button>
                            <span class="">{{i18n 'or'}}</span>
                            <a class="js-router-link" href="/{{locale}}/registration">{{i18n 'Sign up'}}</a>
                        </form>
                    </div>
                    <div class="tab-pane" id="registration">
                        <form role="form">
                            <div class="form-group">
                                <label for="email">{{i18n 'Email address'}}</label>
                                <input type="email" class="form-control js-validate-input js-model-field" name="email"
                                       id="email"
                                       placeholder="{{i18n 'Enter email'}}">
                            </div>
                            <div class="form-group">
                                <label for="password">{{i18n 'Password'}}</label>
                                <input type="password" class="form-control js-validate-input js-model-field"
                                       name="password"
                                       id="password"
                                       placeholder="{{i18n 'Password'}}">
                            </div>
                            <button type="submit" class="btn btn-primary js-sign-up">{{i18n 'Sign up'}}</button>
                            <span class="">{{i18n 'or'}}</span>
                            <a class="js-router-link" href="/{{locale}}/login">{{i18n 'Sign in'}}</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>