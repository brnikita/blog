<div class="user">
    <div class="user__profile">
        <div class="user__profile__info clearfix">
            <div class="user__profile__info__avatar">
                <div>
                    <img data-src="holder.js/140x140" class="img-rounded" alt="140x140"
                         src="data:image/svg+xml;base64,"
                         style="width: 140px; height: 140px;">
                </div>
            </div>
            <div class="user__profile__info__description">
                <div class="user__profile__block">
                    <div>{{i18n 'First Name Last Name'}}:</div>
                    <h3 class="font-color-blue">
                        <input type="text" value="{{name}}"/>
                        <input type="text" value="{{surname}}"/>
                    </h3>
                </div>
                <div class="user__profile__block">
                    <div>
                        {{i18n 'Sex'}}:
                    </div>
                    <div>
                        <input type="" value="{{sex}}"/>
                    </div>
                </div>
                <div class="user__profile__block">
                    <div>
                        {{i18n 'Birthday'}}
                    </div>
                    <div>

                    </div>
                </div>
                <div class="user__profile__block">
                    <div>
                        {{i18n 'Inforfomation obout author'}}:
                    </div>
                    <div>
                        <textarea>

                        </textarea>
                    </div>
                </div>
                <div class="user__profile__block">
                    <div>
                        {{i18n 'Hobbies'}}
                    </div>
                </div>
            </div>
        </div>
        <div class="user__profile__footer">
            <a href="/{{locale}}/add_post"
               class="btn btn-primary js-router-link">{{i18n 'Add post'}}</a>
        </div>
    </div>
    <div>
        <div class="box-message box-message-warning">
            <h3>
                <a class="js-router-link" href="/{{locale}}/posts/new">
                    {{{i18n 'Here could be your posts'}}}
                </a>
            </h3>
        </div>
    </div>
</div>