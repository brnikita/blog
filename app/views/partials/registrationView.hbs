<form role="form" novalidate="novalidate">
    <div class="form-group">
        <label for="user-name">{{i18n 'Username'}}</label>
        <input type="text" class="form-control js-validate-input js-model-field"
               name="user-name"
               id="user-name"
               placeholder="{{i18n 'Username'}}" />
    </div>
    <div class="form-group">
        <label for="email">{{i18n 'Email address'}}</label>
        <input type="text" class="form-control js-validate-input js-model-field" name="email"
               id="email"
               placeholder="{{i18n 'Email address'}}" />
    </div>
    <div class="form-group">
        <label for="password">{{i18n 'Password'}}</label>
        <input type="password" class="form-control js-validate-input js-model-field"
               name="password"
               id="password"
               placeholder="{{i18n 'Password'}}" />
    </div>
    <button type="submit" class="btn btn-warning js-sign-up">{{i18n 'Sign up'}}</button>
</form>