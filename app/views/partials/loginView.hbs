<form role="form" class="js-login-form" novalidate="novalidate">
    <div class="form-group">
        <label for="email">{{i18n 'Email address'}}</label>
        <input type="email" class="form-control js-validate-input js-model-field" name="email" id="email"
               placeholder="{{i18n 'Email address'}}">
    </div>
    <div class="form-group">
        <label for="password">{{i18n 'Password'}}</label>
        <input type="password" class="form-control js-validate-input js-model-field" name="password" id="password"
               placeholder="{{i18n 'Password'}}">
    </div>
    <button type="submit" class="btn btn-warning">{{i18n 'Sign in'}}</button>
</form>