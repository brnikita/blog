<div class="container">
    <div class="login-form">
        <form role="form">
            <h1>{{i18n 'Login'}}</h1>
            <div class="form-group">
                <label for="exampleInputEmail1">{{i18n 'Email address'}}</label>
                <input type="email" class="form-control" id="exampleInputEmail1" placeholder="{{i18n 'Enter email'}}">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">{{i18n 'Password'}}</label>
                <input type="password" class="form-control" id="exampleInputPassword1" placeholder="{{i18n 'Password'}}">
            </div>
            <div class="checkbox">
                <label>
                    <input type="checkbox"> Check me out
                </label>
            </div>
            <button type="submit" class="btn btn-primary">{{i18n 'Submit'}}</button>
        </form>
    </div>
</div>