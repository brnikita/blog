extend ../layoutView
block content
    if posts.length
        .container
            each post in posts
                .row.content__post.js-module(data-module="posts/postPreviewModule", data-post_year="#{post.UTCYear}", data-post_month="#{post.UTCMonth}",
                data-post_date="#{post.UTCDate}")
                    h1
                        a(href="/ru/posts/#{post.UTCYear}/#{post.UTCMonth}/#{post.UTCDate}/#{post.titleUrl}") #{post.title}
                    .js-meta-information
                    p !{post.description}
                    a.btn.btn-primary(type="button", href="/ru/posts/#{post.UTCYear}/#{post.UTCMonth}/#{post.UTCDate}/#{post.titleUrl}")= __('Read more...')
    else
        .container.page-not-found
            h1= __('No posts')