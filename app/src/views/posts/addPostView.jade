extend ../layoutView
block content
    .container.js-module(data-module="posts/addPostModule")
        form.add_post_from(action="", method="post", role="form")
            .form-group
                label(for="post_title") Заголовок
                input#title.add_post_from__title.form-control(type="text", name="title", placeholder="Заголовок")
            .form-group
                label(for="post_body") Стататья
                textarea#body.add_post_from__body.form-control(name="body", placeholder="Статья")
            button.btn.btn-primary(type="submit") Отправить