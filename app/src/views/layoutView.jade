doctype html
//if lt IE 7
    html.no-js.lt-ie9.lt-ie8.lt-ie7(lang="en", xmlns:ng="http://angularjs.org")
//if IE 7
    html.no-js.lt-ie9.lt-ie8(lang="en", xmlns:ng="http://angularjs.org")
//if IE 8
    html.no-js.lt-ie9(lang="en", xmlns:ng="http://angularjs.org")
