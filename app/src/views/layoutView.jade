html.no-js(lang="en")
    // <![endif]
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        title= title
        meta(name='description', content='')
        meta(name='viewport', content='width=device-width')
        link(href="/static/favicon.ico", rel="shortcut icon", type="image/x-icon")
        //Откомпилированные compass файлы, версия берется из package.json
        link(href="/static/styles.css?v=#{version}", rel="stylesheet")
    body.bg-color-green
        .header
            .container
                .row
                    a.header__logo(href="/")
                        img.img-responsive(src="/static/images/logo.png", alt="Soshace")
        .content
            block content
        - if (environment === 'development')
            script(src="#{scriptsPath}/scripts/libs/require.js")
            script(src="#{scriptsPath}/require.conf.js")
            script(src="#{scriptsPath}/scripts/app.js")
        - if (environment === 'production')
            // Yandex.Metrika counter
            noscript
                div
                    img(src="//mc.yandex.ru/watch/23765065", style="position:absolute; left:-9999px;", alt="")
            // /Yandex.Metrika counter
            //Минифицированные скрипты, версия берется из package.json
            script(src='#{scriptsPath}/scripts.min.js?v=#{version}')